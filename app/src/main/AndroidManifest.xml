<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/security"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.moviesapp.UI.RegisterActivity"></activity>
        <activity android:name="com.example.moviesapp.UI.ProfileActivity" />
        <activity android:name="com.example.moviesapp.UI.MovieActivity" />
        <activity android:name="com.example.moviesapp.UI.FavouriteActivity" />
        <activity android:name="com.example.moviesapp.UI.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.moviesapp.UI.MainActivity" />
    </application>

</manifest>